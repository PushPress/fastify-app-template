{
  "name": "fastify-app-template",
  "version": "1.0.0",
  "description": "Starter template for Fastify apps the PushPress way",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "pretest": "pnpm migrate latest",
    "test": "vitest --no-file-parallelism",
    "test:coverage": "vitest --coverage --watch=false --no-file-parallelism",
    "start": "pnpm build && fastify start -o -P dist/app.js",
    "lint": "pnpm eslint .",
    "build": "tsc",
    "build:web": "cd spa && pnpm build",
    "watch:ts": "tsc -w",
    "dev": "pnpm build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:web": "cd spa && pnpm dev",
    "dev:start": "fastify start --ignore-watch='(.ts$|.json$)' -o -w -P dist/app.js",
    "repl": "pnpm build && fastify start -o -P dist/app.js -- --repl",
    "start:prod": "fastify start -o dist/app.js",
    "codegen:db": "export $(grep -v '^#' .env | xargs) && kysely-codegen --dialect postgres --out-file src/types/db.ts --camel-case --url=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}",
    "codegen:feature-flags": "growthbook features generate-types --output src/types --project prj_19g61wm6h16771",
    "migrate": "kysely migrate",
    "seed": "kysely seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bull-board/api": "^6.7.7",
    "@bull-board/fastify": "^6.7.7",
    "@fastify/autoload": "^6.1.0",
    "@fastify/env": "^5.0.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.1.0",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@pushpress/datadog": "^0.5.0",
    "@pushpress/fastify-feature-flags": "0.12.0",
    "@pushpress/pushpress": "^0.21.0",
    "bullmq": "^5.40.2",
    "dd-trace": "^5.36.0",
    "dotenv": "^16.4.7",
    "eventemitter2": "^6.4.9",
    "fastify": "^5.2.1",
    "fastify-cli": "^7.3.0",
    "fastify-plugin": "^5.0.1",
    "fastify-zod-openapi": "^4.1.1",
    "ioredis": "^5.5.0",
    "json-schema-to-ts": "^3.1.1",
    "kysely": "^0.27.5",
    "pg": "^8.13.1",
    "qs": "^6.14.0",
    "ts-pattern": "^5.6.2",
    "zod": "^3.24.1",
    "zod-openapi": "^4.2.3",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.1",
    "@types/pg": "^8.11.11",
    "@types/qs": "^6.9.18",
    "@vitest/coverage-v8": "^3.0.5",
    "c8": "^10.1.3",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.0",
    "fastify-tsconfig": "^3.0.0",
    "globals": "^15.14.0",
    "kysely-codegen": "^0.17.0",
    "kysely-ctl": "^0.11.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "peerDependencies": {
    "esbuild": "^0.24.2"
  }
}
