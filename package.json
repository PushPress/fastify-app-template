{
  "name": "fastify-app-template",
  "version": "1.0.0",
  "description": "Starter template for Fastify apps the PushPress way",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build:ts && tsc -p test/tsconfig.json && c8 node --test --env-file=.env.test -r ts-node/register \"test/**/*.ts\"",
    "start": "npm run build:ts && fastify start -o -P dist/app.js",
    "lint": "pnpm eslint .",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -o -w -P dist/app.js",
    "codegen": "export $(grep -v '^#' .env | xargs) && kysely-codegen --dialect postgres --out-file src/types/db.ts --camel-case --url=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}",
    "migrate": "kysely migrate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/env": "^5.0.1",
    "@fastify/sensible": "^6.0.0",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@pushpress/datadog": "^0.4.2",
    "dd-trace": "^5.30.0",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.3.0",
    "fastify-plugin": "^5.0.0",
    "fastify-zod-openapi": "^4.0.0",
    "json-schema-to-ts": "^3.1.1",
    "kysely": "^0.27.5",
    "pg": "^8.13.1",
    "qs": "^6.13.1",
    "ts-pattern": "^5.6.0",
    "zod": "^3.24.1",
    "zod-openapi": "^4.2.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.1.0",
    "@types/pg": "^8.11.10",
    "@types/qs": "^6.9.17",
    "c8": "^10.1.2",
    "concurrently": "^9.0.0",
    "eslint": "^9.17.0",
    "fastify-tsconfig": "^2.0.0",
    "globals": "^15.14.0",
    "kysely-codegen": "^0.17.0",
    "kysely-ctl": "^0.10.1",
    "ts-node": "^10.4.0",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.18.2"
  }
}
